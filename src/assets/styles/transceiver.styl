// 精选/全部切换
.radioType_title {
  padding 0 120px 0 120px
  position relative
  z-index 10
  height 20px
  width 960px
  margin auto
  padding-bottom 34px
  padding-top 40px
  color #999
  font-size 16px
}
.radioType_title span {
  cursor pointer
  position relative
}
.radioType_title span::before {
  content: '';
  position: absolute;
  width: 100%;
  height: 2px;
  background-color: #333;
  top: 30px;
  left: 0;
  display: none;
}
.radioType_title span:hover::before {
  display block
}
.radioType_title span:hover {
  color: #333;
}
.radioType_title span:first-child {
  margin-right: 30px;
}
.radioType_title .type-active {
  color: #333 !important;
}
radioType_title .type-active::before {
  content: '';
  position: absolute;
  width: 100%;
  height: 2px;
  background-color: #333;
  top: 30px;
  left: 0;
  display: block !important;
}

