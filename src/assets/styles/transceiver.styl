// 电台种类(6种)
.type_wrap
  margin 0 auto
  border 1px dashed #333
  border-left none
  border-right none
  height 139px
  width 960px
.radio_type
  float left
  height 54px
  width 150px
  background-color #fff
  border 1px solid #e8e8e8
  line-height 54px
  text-align center
  font-size 17px
  margin 0 4px
  font-weight lighter
  margin-top 40px
.radio_type a
  text-decoration none
.radio_type img
  vertical-align sub;
  padding-right 14px
.radio_love
  width 25px
  height 22px
.radio_trip
  width 18px
  height 23px
.radio_story
  width 27px
  height 23px
.radio_music
  width 24px
  height 24px
.radio_movie
  width 24px
  height 24px
.radio_poetry
  width 25px
  height 24px
// 最新 top 推荐
.connect_wrap
  padding 0 120px 0 120px
.recommend_wrap
  width 960px
  margin 0 auto
.top_wrap
  width 960px
  margin 0 auto
.new_wrap
  width 960px
  margin auto
  margin-bottom 128px
.recommend_title
  background-image url("../images/square.png")
  background-repeat no-repeat
  padding-bottom 40px
  padding-top 70px
  padding-left 28px
  background-position 0 74px
.recommend_ting_wrap
  display flex
  justify-content space-between
.recommend_ting
  border 1px solid #e8e8e8
  width 300px
.recommend_img_wrap
  width 300px
  height 300px
  overflow: hidden
  position relative
.recommend_img_wrap:hover > .coverDiv
  display  block
.recommend_img
  width 300px
  height 300px
  transition all 0.5s
.recommend_img_wrap:hover > .recommend_img
  transform scale(1.1,1.1)
.coverDiv
  width 300px
  height 300px
  position absolute
  left 0
  top 0
  opacity 0.4
  background url("../../assets/images/play-icon.png") black
  background-repeat no-repeat
  background-position 110px 110px
  display none
.recommend_ting_introduce
  padding 25px 20px 13px
  background-color #fff
.recommend_ting_name
  overflow hidden
  text-overflow ellipsis
  font-weight 200
  white-space nowrap
  font-size 24px
  padding-bottom 10px
.recommend_ting_anchor
  color #333
  font-size 12px
  font-weight 200
  padding-bottom 10px
.recommend_ting_introduce span
  color #333
  font-size 12px
  font-weight lighter
// 热门电台
.hot_wrap
  width 960px
  margin 0 auto
  border 1px solid black
.hot_title
  background-image url("../images/square.png")
  background-repeat no-repeat
  padding-bottom 40px
  padding-top 70px
  padding-left 28px
  background-position 0 74px
.hot_radio_wrap
  margin-left -30px
  width 1020px
  display flex
  justify-content space-between
.hot_radio
  background rgba(255,255,255,0)
  border-radius 10px
  width 340px
  height 500px
.hot_radio:hover
  background rgba(255,255,255,1)
.hot_img_wrap
  margin-top 20px
  margin-left 20px
  position relative
  width 300px
  height 300px
  z-index 100
  margin-bottom 45px
.hot_img1
  position absolute
  border-radius 10px
  width 300px
  height 300px
  left 0
  top 0
  z-index 20
.hot_img_wrap:hover > .hot_coverDiv
  opacity 0.4
  transition opacity 1s
.hot_img_wrap:hover > .hot_coverDiv_title
  transition opacity 1s
  opacity 1
.hot_img2
  position absolute
  border-radius 10px
  transform rotate(90deg)
  width 280px
  height 280px
  left 10px
  top 27px
  z-index 10
.hot_img3
  position absolute
  border-radius 10px
  transform rotate(270deg)
  width 260px
  height 260px
  left 20px
  top 54px
.hot_coverDiv
  width 300px
  height 300px
  position absolute
  text-align center
  line-height 300px
  border-radius 10px
  background black
  z-index 30
  left 0
  top 0
  opacity 0
.hot_coverDiv_title
  left 70px
  top 130px
  width 170px
  position absolute
  color white
  z-index 40
  opacity 0
.hot_radio_introduce
  text-align center
.hot_radio_name
  font-size 30px
  text-decoration none
  color black
  font-weight 200
.hot_radio_anchor
  padding-top 7px
  padding-bottom 5px
  color #333
  font-size 12px
  font-weight 200
  text-decoration none
.hot_radio_playCount
  color #333
  font-size 12px
  font-weight lighter

// 全部电台
.All_radio
  background rgba(255,255,255,0)
  border-radius 10px
  width 340px
  height 500px
  float left
.All_radio:hover
  background rgba(255,255,255,1)
.All_wrap
  width 1020px
  margin 0 auto
  border 1px solid black
  overflow hidden
