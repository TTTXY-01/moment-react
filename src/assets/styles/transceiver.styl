.connect_wrap
  padding 0 120px 0 120px
.recommend_wrap
  width 960px
  margin 90px auto
  margin-bottom 0
.top_wrap
  width 960px
  margin 0 auto
.new_wrap
  width 960px
  margin 0 auto
.recommend_title
  background-image url("../images/square.png")
  background-repeat no-repeat
  padding-bottom 40px
  padding-top 70px
  padding-left 28px
  background-position 0 74px
.recommend_ting_wrap
  display flex
  justify-content space-between
.recommend_ting
  border 1px solid #e8e8e8
  width 300px
.recommend_img_wrap
  width 300px
  height 300px
  overflow: hidden
  position relative
.recommend_img_wrap:hover > .coverDiv
  display  block
.recommend_img
  width 300px
  height 300px
  transition all 0.5s
.recommend_img_wrap:hover > .recommend_img
  transform scale(1.1,1.1)
.coverDiv
  width 300px
  height 300px
  position absolute
  left 0
  top 0
  opacity 0.4
  background url("../../assets/images/play-icon.png") black
  background-repeat no-repeat
  background-position 110px 110px
  display none
.recommend_ting_introduce
  padding 25px 20px 13px
  background-color #fff
.recommend_ting_name
  overflow hidden
  text-overflow ellipsis
  font-weight 200
  white-space nowrap
  font-size 24px
  padding-bottom 10px
.recommend_ting_anchor
  color #333
  font-size 12px
  font-weight 200
  padding-bottom 10px
.recommend_ting_introduce span
  color #333
  font-size 12px
  font-weight lighter

