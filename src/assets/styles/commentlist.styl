*
  padding 0
  margin 0
$border = 1px solid black
.clear-float
  clear both
  display table
  content ''
.float-left
  float left
.float-right
  float right
.none-comment //没有评论时的显示效果
  width 100%
  padding-top 300px
  background url('../images/no-comment.png') no-repeat 50% 0
  background-size 60%
  padding-bottom 100px
  color #999
  font-size 14px
.comment //评论
  width 90%
  margin 0 auto
  .comment-header //评论的头部内容
    border-bottom  1px solid #999
    text-align left
    .add-comment //添加评论
      margin 60px 0 40px 0
      .comment-textarea  //添加评论的文本框
        color #666
        outline none
        width 440px
        height 80px
        padding 20px
        resize none
        border 1px solid #e8e8e8
        border-radius 10px
      .add-btn //添加评论的按钮
        outline none
        background-color #78bc85
        width 96px
        padding 8px 20px
        color white
        border-radius 20px
        border none
        vertical-align middle
        float right
        margin-top 50px
        margin-right 20px
      .add-btn:hover //悬停按钮
        opacity 0.8
    .comment-count //评论的数量
      font-size 18px
      color #333
      text-align left
      span
        font-size 12px
  .comment-content //评论的内容
    margin-top 30px
    .content-every //每一个内容
      width 100%
      margin 30px 0
      padding-bottom 50px
      border-bottom .3px solid #e3e3e3
      .comment-user-icon //评论用户的头像
        width 42px
        height 42px
        border-radius 50%
        overflow hidden
        img //头像的图片
          width 100%
      .comment-user-content //用户评论的内容
        width 90%
        .user-content-header // 用户评论内容的头部
          width 100%
          .username //用户名
            font-weight 300
            color #57ad68
            font-size 14px
            padding-right 10px
          .add-time //评论时间
            font-size 10px
            color #999
            font-weight lighter
          .praise // 点赞
            font-size 12px
            font-weight lighter
            .praise-count //点赞的数量
              color #999999
              background url('../images/praise.png') no-repeat right
              background-size contain
              padding 0 30px
              float left
            .praise-count:hover //悬停点赞
              background url('../images/praiseH.png') no-repeat right
              background-size contain
              color orange
            .liner //小手后的线
              width 0
              border 1px solid #999
              margin 0 15px
              float left
            .reply //回复
              float left
              color #999999
            .reply:hover //悬停回复
              color #5cb76e
        .comment-text //评论的文字
          text-align left
          width 100%
          color #666
          font-size 14px
          margin 20px 0
      .reply-textarea-father //回复评论的
        display none
        .reply-textarea //回复评论的文本框
          color #666
          font-size 14px
          outline none
          width 90%
          height 80px
          padding 20px 0 20px 15px
          margin 20px 0
          resize none
          border .5px solid #78bc85
          border-radius 10px
        .reply-btn //回复评论的按钮
          width 95%
          text-align right
          button
            outline none
            color white
            width 90px
            line-height: 36px
            font-size 14px
            text-align center
            margin-left 20px
            border-radius 18px
            font-weight 100
            border none
          .reply-btn1 //取消
            background-color #cccccc
          .reply-btn1:hover
            background-color rgb(153,153,153)
          .reply-btn2 //回复
            background-color #78bc85
          .reply-btn2:hover
            background-color rgb(87,173,104)
      .reply-text //回复的文字内容
          margin-top 10px
          background-color rgb(250,250,250)
          border 1px solid #e8e8e8
          padding 8px 0 8px 10px
          width 95%
          .username //回复的用户
            padding-right 10px
            color #999
            font-size 14px
            font-weight 200
            text-decoration none
          .text  //回复的文字
            font-size 12px
            color #999
  .more-see
    color #78bc85
    width 100%
    font-size 14px
    padding 20px 0
  .over-all
    width 100%
    font-size 14px
    display none
    padding 30px 0