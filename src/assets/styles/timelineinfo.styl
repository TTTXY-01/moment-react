*
  padding 0
  margin 0
  font-family: "PingFang SC", "微软雅黑"

$border = 1px solid black
a
  text-decoration none
.float-left
  float left

.float-right
  float right

.clear-float
  content ""
  clear both
  display table

.timelineinfo //最大的内容
  width 1120px
  margin 70px auto 0
  padding 10px
  .timelineinfo-left //左边的大内容
    width 716px
    margin-right 12px
    padding 30px 46px
    padding-bottom 100px
    margin-bottom 128px
    background-color #ffffff
    border 1px solid #e8e8e8
    .left-header //左边内容的头部
      width 100%
      .left-header-left //头部的左边
        overflow hidden
        .header-icon
          float left
          img
           width 40px
           border-radius 50%
        .header-uname
          color #666
          font-size 12px
          float left
          margin 10px 0 0 30px
          text-decoration none

      .left-header-right //头部内容的右边
          height 40px
          line-height 40px
          font-size 12px
          color #999
          position relative
          .arrows //小箭头
            padding 0 10px
            background url('../images/del.png') no-repeat 50%
            background-size contain
            margin-left 20px
          .arrows:hover //箭头悬停
            background url('../images/delHover.png') no-repeat 50%
            background-size contain
          .arrows-hover //下头下的文字
            color red
            width 50px
            border 1px solid #e8e8e8
            border-radius 3px
            text-align center
            background-color white
            position absolute
            left 100px
            top: 40px
            display none
    .left-content //左边的内容
      width 100%
      text-align center
      .left-text //左边内容的正文
        width 90%
        margin 0 auto
        padding-top 49px
        padding-bottom 22px
        font-weight 300
        color #333
        font-size 14px
        text-align left
      .left-tag //左边内容的类型
        border-bottom .5px solid #999
        width 90%
        text-align left
        margin 10px auto
        padding 10px 0
        .left-tag-a //类型中的文字
          text-decoration none
          color #999
          font-size 12px
          font-weight 200
        .left-tag-a:hover
          color #5cb76e
      .voice
        width 90%
        margin 0 auto
        text-align left
        overflow hidden
        color rgb(87,173,104)
        .audio
          background url('../images/timeline-playicon.png') no-repeat left
          background-size 50%
          width 30px
          overflow hidden
          float left
        .voice-action
          opacity 0
        .canvas
          width 50%
          height 10px
          border $border
          float left
          margin-top 8px
        .voice-time
          float left
          margin-top 8px
          margin-left 10px
      .left-bottom
        width 90%
        margin 50px auto
        .left-bottom-left
           background url('../images/like.png') no-repeat left
           background-size 50%
           padding-left 35px
           color #999
           height 44px
           line-height 44px
        .left-bottom-left:hover
           background url('../images/likeH.png') no-repeat left
           background-size 50%
        .left-bottom-right
           position relative
           span
             display inline-block
             width 44px
             height 44px
             margin-left 20px
           .sina
             background url('../images/foot-sina.png') no-repeat
             background-size contain
           .sina:hover
             background url('../images/share-sina.png') no-repeat
             background-size contain
           .wechar
             background url('../images/foot-wechat.png') no-repeat
             background-size contain
           .wechar:hover
             background url('../images/share-wechat.png') no-repeat
             background-size contain
           .wechar-er
             display none
             position absolute
             width 200px
             border-radius 10px
             top -240px
             box-shadow 1px 1px 1px 1px lightgrey
             left 10px
          .Qzone
             background url('../images/qzone.png') no-repeat
             background-size contain
           .Qzone:hover
             background url('../images/share-qzone.png') no-repeat
             background-size contain
           .douban
             background url('../images/dou.png') no-repeat
             background-size contain
           .douban:hover
             background url('../images/share-dou.png') no-repeat
             background-size contain
  .timelineinfo-right
    width 290px
    padding 0 0 12px 0
    margin-bottom 31px
    .info-hotlabel
      margin-bottom 30px
      background-color white
      border 1px solid #e8e8e8
    .info-hotlabel-header
      font-size 14px
      padding 10px 0 10px 50px
      background url('../images/label-img.png') no-repeat 27px 12px
      background-size 5%
    .info-hotlabel-content
      padding 30px
      .btn-tag
        display inline-block
        margin-right 10px
        margin-bottom 18px
        cursor pointer
        border-radius 25px
        border 1px solid #e8e8e8
        line-height 32px
        padding 0 17px
        a
          font-size 14px
          font-weight 200
          color #999
      .btn-tag:hover
        color #57ad68
        border 1px solid #57ad68
    .info-correlation
      margin-top 30px
      background-color white
    .info-correlation-header
        font-size 14px
        padding 10px 0 10px 50px
        background url('../images/label-img.png') no-repeat 27px 12px
        background-size 5%
        border 1px solid #e8e8e8
    .info-correlation-content
       width 100%
       .fragment-one //全部碎片中的每一个
          width 100%
          border 1px solid rgb(232,232,232)
          margin 0 auto 20px
          img //下面的图片
            width 100%
            height 100%
       .fragment-one-content //每一个的内容
           padding 10px
       .fragment-one-one-user //碎片下的用户
           margin 20px 0
           width 100%
          .fragment-one-text
            text-align left
          a
            text-align left
            color black
            font-weight 200
            font-size 14px
         .user-left //用户中的左边
            color grey
            font-size 14px
            img //用户头像
              width 30px
              height 30px
              border-radius 50%
              vertical-align middle
              margin-right 7px

         .user-right //用户的右边  点赞
             background url('../images/like.png') no-repeat 0 8px
             padding-bottom 5px
             background-size contain
             width 20px
             height 20px
             float right
         .user-right:hover
             background url('../images/likeH.png') no-repeat 0 8px
             background-size contain
         .green-hover:hover
             color rgb(87, 173, 104)