*
 padding 0
 margin 0
.float-left //左浮动
  float left
.float-right //右浮动
  float right
.clear-float::after  //清除浮动
  content ''
  clear both
  display table
$border = 1px solid black
body //大的背景图
  background url('../images/back.png') no-repeat
  width 100%
  height 100%
a //所有a标签
  text-decoration none
.color
  color #000
.green:hover //悬停的字体
  color #57ad68
.feedlist //最大内容
  font-family "PingFang SC","微软雅黑"
  width 900px
  margin 50px auto
  .feedlist-header // 上边的头部 title
    background url('../images/label-img.png') no-repeat left
    background-size contain
    padding-left 30px
    margin 20px 0
  .feedlist-content // 真正的内容
    font-size 12px
    color #333
    .feedlist-one // 每一个内容
      background-color #fff
      padding 18px 30px
      padding-bottom 30px
      color #333
      font-weight 200
      font-size 13px
      margin-bottom 20px
      border 1px solid #e8e8e8
      border-radius 2px
      .content-header // 每一个内容的头部
        line-height 32px
        .user-icon // 用户头像
          width 30px
          height 30px
          border-radius 50%
          overflow hidden
          img
            width 100%
        .user-name  //用户名字
          margin-left 15px
        .user-con  //此用户做的事情
          margin-left 15px
      .text-header  //文字的头部
        font-weight 500
        font-size 16px
        padding-left 40px
        padding-top 6px
      .ting-text // ting 的文字
        padding-top 22px
        margin-top 22px
        margin-left 40px
        padding-left 27px
        width 758px
        background-color #fbfbfb
      .ting-img //ting的图片
        margin-right: 28px
        width 130px
        height 130px
        border-radius 10px
        overflow hidden
        box-shadow 0 3px 10px 0 #ccc
        img
          width 100%
      .ting-content //ting的内容
        word-break break-all
        word-wrap break-word
        text-overflow ellipsis
        overflow hidden
        width 550px
        padding-top 9px
        height 70px
        color #333
        font-weight 200
        font-size 13px
      .ting-user-name //ting用户的名字
        font-size 12px
        padding-top 10px
        font-weight 200
        a
          color #333333
      .feed-others //评论数/点赞数
        color #999
        font-size 12px
        padding-top 11px
        font-weight 100
        //赞Ting结束
      .timeline-content // 碎片的内容
        padding-top 22px
        margin-left 40px
        padding-left 27px
        width 758px
        background-color #fbfbfb
        .timeline-text //碎片的文字
          padding-top 15px
          font-size 18px
          color #000000
          a
           color #000000
        .timeline-img //碎片的图片
          margin-top 10px
          img
            width 40%

        //发表碎片结束
      .article-content // 文章的内容
         padding-top 22px
         margin-left 40px
         padding-left 27px
         width 758px
         background-color #fbfbfb
        .article-box // 文章的左边内容
          width 468px
          padding-top 24px
          .article-text //文章标题
            padding-right 25px
            line-height 21px
          .view-all //加载更多文章的小标
            display inline-block
            padding-left 10px
            position relative
            height 21px
            width 80px
            a
              color #78bc85
              font-weight 200
              padding-right 20px
              img
                position absolute
                height 18px
                right 0
          .feed-user-name //文章作者
            position relative
            padding-top 26px
            font-size 12px
          .feed-user-name::before //文章作者上面的小线
            position absolute
            content ''
            width 30px
            height 1px
            top 15px
            background-color #333
        .active-img // 文章图片
          width 263px
          height 172px
          overflow hidden
          a
            width 100%
            img
              width 100%
.download-img  //加载时的小茶杯图片
  text-align center