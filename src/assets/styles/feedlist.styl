*
 padding 0
 margin 0
.float-left
  float left
.float-right
  float right
.clear-float::after
  content ''
  clear both
  display table
$border = 1px solid black
body
  background url('../images/back.png') no-repeat
  width 100%
  height 100%
a
  text-decoration none
.green:hover
  color #57ad68
.feedlist
  font-family "PingFang SC","微软雅黑"
  width 900px
  margin 100px auto
  .feedlist-header
    background url('../images/label-img.png') no-repeat left
    background-size contain
    padding-left 30px
    margin 20px 0
  .feedlist-content
    font-size 12px
    color #333
    .feedlist-one
      background-color #fff
      padding 18px 30px
      padding-bottom 30px
      color #333
      font-weight 200
      font-size 13px
      margin-bottom 20px
      border 1px solid #e8e8e8
      border-radius 2px
      .content-header
        line-height 32px
        .user-icon
          width 30px
          height 30px
          border-radius 50%
          overflow hidden
          img
            width 100%
        .user-name
          margin-left 15px
          color #333333
        .user-con
          margin-left 15px
      .text-header
        font-weight 500
        font-size 16px
        padding-left 40px
        padding-top 6px
        color black
      .ting-text
        padding-top 22px
        margin-top 22px
        margin-left 40px
        padding-left 27px
        width 758px
        background-color #fbfbfb
      .ting-img
        margin-right: 28px
        width 130px
        height 130px
        border-radius 10px
        overflow hidden
        box-shadow 0 3px 10px 0 #ccc
        img
          width 100%
      .ting-content
        word-break break-all
        word-wrap break-word
        text-overflow ellipsis
        overflow hidden
        width 550px
        padding-top 9px
        height 70px
        color #333
        font-weight 200
        font-size 13px
      .ting-user-name
        font-size 12px
        padding-top 10px
        font-weight 200
        a
          color #333333
      .feed-others
        color #999
        font-size 12px
        padding-top 11px
        font-weight 100
        //赞Ting结束
      .timeline-content
        padding-top 22px
        margin-left 40px
        padding-left 27px
        width 758px
        background-color #fbfbfb
        .timeline-text
          padding-top 15px
          font-size 18px
          color #000000
          a
           color #000000
        .timeline-img
          margin-top 10px
          img
            width 40%

        //发表碎片结束
      .article-content
         padding-top 22px
         margin-left 40px
         padding-left 27px
         width 758px
         background-color #fbfbfb
        .article-box
          width 468px
          padding-top 24px
          .article-text
            padding-right 25px
            line-height 21px
          .view-all
            padding-left 10px
            position relative
            line-height 21px
            a
              color #78bc85
              font-weight 200
              height 100%
              img
                height 15px
                vertical-align middle
          .feed-user-name
            position relative
            padding-top 26px
            font-size 12px
          .feed-user-name::before
            position absolute
            content ''
            width 30px
            height 1px
            top 15px
            background-color #333
        .active-img
          width 263px
          height 172px
          overflow hidden
          a
            width 100%
            img
              width 100%
